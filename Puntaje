import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class Contador here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */

public class Contador extends Actor
{
    int puntaje = 0;
    /**
     * Act - do whatever the Contador wants to do. This method is called whenever
     * the 'Act' or 'Run' button gets pressed in the environment.
     */
    public void act() 
    {
        Color colornaranja = new Color(255,200,0);
        setImage(new GreenfootImage("Puntaje:"+ puntaje, 25, Color.GREEN, Color.BLACK));
    }    
}
